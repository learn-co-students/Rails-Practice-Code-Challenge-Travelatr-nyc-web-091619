<h1>Create a New Destination:</h1>

<% if flash[:errors] %>
  <ul>
  <% flash[:errors].each do |message| %>
    <li><%= message %></li>
  <% end%>
  </ul>
<% end %>


<%= form_with model: @destination do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :country %>
<%= f.text_field :country %>
<%= f.submit %>

<% end %>