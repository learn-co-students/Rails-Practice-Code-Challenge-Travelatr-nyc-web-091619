<h1>Create a New Post:</h1>

<% if flash[:errors] %>
  <ul>
  <% flash[:errors].each do |message| %>
    <li><%= message %></li>
  <% end%>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<%= f.label :content %>
<%= f.text_field :content %>
<br>

<h4>Blogger: <%= f.collection_select :blogger_id, @bloggers, :id, :name, prompt: true %></h4>

<h4>Destination: <%= f.collection_select :destination_id, @destinations, :id, :name, prompt: true %></h4><br>

<%= f.submit %>
<% end %>
