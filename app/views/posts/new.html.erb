
<ol>
        <% if @post.errors.any?%> 
        <% @post.errors.full_messages.each do |msg| %>
           <li> <%= msg %> </li>
            <% end %> 
            <% end %> 
            <ol>
    


<h1> Create a new Post</h1>
<%= form_for @post do |f| %>
<%= f.label :title%>
<%= f.text_field :title %><br><br>
<%= f.label :content %>
<%= f.text_area :content %><br><br>
    <%= f.label :blogger %>
    <%= f.collection_select :blogger_id, Blogger.all, :id , :name %><br><br>
    <%= f.label :destination %>
    <%= f.collection_select :destination_id, Destination.all, :id , :name %><br><br>
    <%= f.submit %>
    
    

<% end %>